set synctex true
set synctex-editor-command "nvr --remote-silent %f -c %l"
set highlight-transparency 0.4
set statusbar-home-tilde true
set statusbar-basename true
set window-title-page true
set scroll-page-aware true
#set smooth-scroll true
set scroll-full-overlap 0.01
set page-padding 20
set page-cache-size 40
set database "sqlite"
set guioptions "schv"

set recolor true
set recolor-keephue true
set recolor-lightcolor "rgba(200,120,125,0.75)"
set recolor-darkcolor "rgba(0,0,0,1)"
set default-bg "rgba(0,255,0,0.1)"

unmap r

map r recolor
map <F11> toggle_fullscreen
map <C-r> reload
map <C-Left> rotate rotate-ccw
map <C-Right> rotate rotate-cw
